//---------------------------------------------------------------------------

#pragma hdrstop
#include "Carte.h"

#include "K8055D.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)


  Carte::Carte()
  {
	adr=0;
	channel=2;


  }
  Carte::~Carte()
  {
   CloseDevice;
  }


  int Carte::connexion()
  {

	var=OpenDevice(adr);
	return var;

  }
  int Carte::getEtat()
  {

   return var;

  }
  int Carte::lecture_analog()
  {
   int res;
	res=ReadAnalogChannel(channel);
	res=res*90/255;
	res=res-30;
	data=res;
	return data;
  }



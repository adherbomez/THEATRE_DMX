		void setId(int id);
		void setName(char*name);
// (à voir)		void setOrder(int Order);
		void setNbScene(std::vector<scene*>scene); //récupère la size du vecteur scene

		//récupération des attributs
		int getId();
		char* getName();
		int getNbScene();
//(à voir)	int getOrder();
		std::vector<scene*>scene getScenes();
};


class programme
{
	private:
		int id;
		char*nom;
		int taille;
		std::map<std::string,scene*>scenes; //scenes avec leurs séquences (encapsulation)

	public:
		programme();

		void setId(int id);
		void setName(int name);
// (à voir)		void setOrder(int Order);
		void setNbScene(std::map<std::string,scene*>); //récupère la size du vecteur scene

		//récupération des attributs
		int getId();
		int getName();
		int getNbScene();
//(à voir)	int getOrder();
		std::map<std::string,scene*> getScenes();
};

#endif


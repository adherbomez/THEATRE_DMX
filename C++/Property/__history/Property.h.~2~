#ifndef PropertyH
#define PropertyH
//---------------------------------------------------------------------------

class property
{
	private:
		char*description;
		int order;
		int id;

	public:
		property();

		int setOrder(int order);
		int setId(int id);
		char* setDescription(char*description);

		int getOrder();
		int getId();
		char* getDescription();
};

#endif

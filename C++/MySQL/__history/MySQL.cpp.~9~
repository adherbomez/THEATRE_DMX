//---------------------------------------------------------------------------

#pragma hdrstop

#include "MySQL.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

 SQL::SQL()
 {
	 mysql = mysql_init(NULL);       //initialise la connexion
 }
bool MySQL::Connect(char*Addr,char*Id,char*Mdp,char*Table)
{

	if (!mysql_real_connect(mysql,Addr,Id,Mdp,Table, 0, NULL, 0))
	{
	   Etat=false;
	}
	else
	{
	   Etat=true;
	}

	return Etat;
}

void MySQL::Disconnect()
{
	mysql_close(mysql);
}




bool MySQL::Insert(string request)
{
	if(mysql_query(mysql,request.c_str())==0)
	{
		return true;
	}
	else
	{
		return false;
	}
}

bool MySQL::Delete(string request)
{
	if(mysql_query(mysql,request.c_str())==0)
	{
		return true;
	}
	else
	{
		return false;
	}
}

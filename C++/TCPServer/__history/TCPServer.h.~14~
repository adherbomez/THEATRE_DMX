#ifndef TCPServerH
#define TCPServerH
#include "Programme.h"
#include <iostream>
#include <WS2tcpip.h>
#include<String.h>
#include <string>
#pragma comment(lib,"ws2_32.lib")
using namespace std;
//---------------------------------------------------------------------------


class TCPServer
{
	private:


		WSADATA wsData;
		SOCKET listening;
		SOCKET clientSocket;
		sockaddr_in client;
	//structure sur l'information de l'etat d'client
		 typedef struct etatClient
			{
			  bool connect;
			  bool receivedOK;
			  bool error;

			}etatClient;
	//structure sur un client et ses informations
		 typedef struct clientStruct
			{
				TCPServer*server;
				SOCKET sock;
				etatClient etat;

			}clientStruct;


	public:
	//structure du client
		clientStruct clStruct;

	//constructeurs du serveur
		TCPServer();
		void bindSocket(unsigned short port);
		static DWORD WINAPI connexion(LPVOID params);
		static DWORD WINAPI received(LPVOID params);

		programme*parseProgramme(data);
		scene*parseScene(data);
		scene*updateScene(scn);
};


#endif
